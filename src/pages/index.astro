---
import { animate } from 'motion';
import { Image } from 'astro:assets';
import 'animate.css';
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import whitewall from '../assets/images/whitewall.jpg';
import harlekin from '../assets/images/harlekin.jpg';
import downarrow from '../assets/images/down-arrow-black.png';
import poster from '../assets/images/poster.png';
import motivation from '../assets/images/motivation.png';
import musikfestival from '../assets/images/musikfestival.png';
import event from '../assets/images/event.png';
import cv from '../assets/images/cv.png';
import beauty from '../assets/images/beauty.png';
import artshop from '../assets/images/artshop.png';
import invite from '../assets/images/invite.png';
// import logo from '../assets/images/logo.png';
// import logo2 from '../assets/images/S-logo.png';
// import logo3 from '../assets/images/sophie-logo.png';
// import logo4 from '../assets/images/logo-colour.png';
import sophietypeface from '../assets/images/sophie_typeface.webp';
import '../styles/global.css'; 
---

<MainLayout title="Promoveringssite">
	<section class="relative grid-cols-5 w-[99%] min-h-[100px] flex items-start justify-center" id="hero">
		<div class="col-start-1 col-span-5 flex justify-center items-center z-10 animate__animated animate__fadeInUp animate__delay-1s">
		  <Image 
			src={sophietypeface} 
			class="w-[800px] h-[500px] object-contain animate__animated animate__zoomIn" 
			alt="typeface" 
		  />
		</div>
	  
		<!-- Downarrow logo med justeret størrelse og placering -->
		<a href="#hero-tekst" class="absolute top-[calc(100%+10px)] flex justify-center items-center z-10">
		  <Image 
			src={downarrow} 
			class="w-[60px] h-[60px] object-contain" 
			alt="down arrow" 
		  />
		</a>
	</section>
		
	<section class="relative grid grid-cols-5 grid-rows-5 w-screen h-screen" id="præsentation">
		<!-- Blå transparent baggrund -->
		<div class="absolute top-0 left-0 w-[99%] h-[84%] md:h-[102%] bg-turkish opacity-20 z-0 mt-28 md:mt-32"></div>
	  
		<!-- Billedet -->
		<Image 
		  src={harlekin} 
		  class="col-start-1 col-span-5 row-start-1 row-span-5 z-0 w-[99%] h-[85%] md:h-[102%] object-cover opacity-5 absolute top-0 left-0 mt-28 md:mt-32" 
		  alt="harlekin baggrund" 
		/>
		
		<!-- Tekstindholdet -->
		<div class="col-start-1 row-start-2 col-span-5 md:col-start-2 md:col-span-3 md:row-start-2 md:row-span-2 z-20 py-10 relative" id="hero-tekst">
			<h1 class="font-playfair font-bold text-kingblue text-3xl md:text-5xl text-center md:mt-24" id="overskrift">
			  OPLEV EN SKRIFTTYPE MED <span class="text-brown">KARAKTER</span>
			</h1>
			<h2 class="md:px-24 text-center text-xl md:text-2xl font-playfair font-semibold text-turkish mt-6 max-w-3xl mx-auto md:mt-12">
			  En <span class="text-brown">unik</span> display-skrift, der kombinerer klassisk elegance og moderne flair. Designet til at stå stærkt og skabe indtryk, hver gang.
			</h2>
		  
			<div class="grid grid-cols-1 md:grid-cols-3 items-center justify-center gap-8 mx-auto max-w-5xl relative md:mt-12 md:mb-10 px-20" id="tekst">
 
				<h3 class="font-playfair text-left text-lg md:text-2xl text-greenblue w-full" id="copy">
				  Velkommen til præsentationen af <span class="font-bold text-turkish italic">SOPHIE</span> – en skrift designet til at være lige så tidløs som den er modig. Med <span class="font-bold text-turkish italic">SOPHIE</span> bliver ord til kunst.
				</h3>
				
				<!-- Billedet i midten -->
				<div class="flex justify-center items-center">
				  <Image 
					src={sophietypeface} 
					class="w-[100px] h-[100px] object-contain animate__animated animate__zoomIn animate-pulse md:w-[200px] md:h-[200px]" 
					alt="typeface" 
				  />
				</div>

				<h3 class="font-playfair text-right text-xl md:text-2xl text-kingblue italic w-full" id="citat">
				  <span class="font-bold text-turkish">SOPHIE</span> er skabt til dig, der søger en tidløs, men dristig skrift – inspireret af de klassiske serif-linjer med et twist af eksperimenterende leg.
				</h3>
			</div>
		</div>
	</section>
	  
	<section id="inspiration" class="bg-beige md:pt-20 md:pb-20 text-center md:text-center md:mt-36">
		<h1 class="font-playfair font-bold text-kingblue text-3xl md:text-5xl text-center md:mt-10">INSPIRATION OG KONCEPT</h1>
	  
		<!-- Text content with margin adjustments for symmetry -->
		<div class="flex flex-col md:flex-row items-center justify-center gap-8 mt-6 mx-auto max-w-3xl px-4">
		  <h3 class="font-playfair text-lg text-almostblack text-left md:w-1/2 md:pr-10">
			<span class="font-bold text-brown italic">SOPHIE</span> er en rejse gennem typografiens historie og dens muligheder for at kombinere forskellige stilarter. 
			<br><br>Inspireret af tidløse klassikere som <span class="font-semibold text-turkish">Didot, Avenir og Playfair Display</span>, har <span class="font-bold text-brown italic">SOPHIE</span> fået tilføjet et moderne harlekinmønster, der gør den unik. 
			<br><br>Det gør <span class="font-bold text-brown italic">SOPHIE</span> perfekt til visuelle statement-projekter, der kræver mere end blot bogstaver.
		  </h3> 
		  
			<!-- Container with flex layout for positioning -->
		<div class="flex flex-col items-center justify-center gap-10 md:mt-10">
			<!-- Blockquote with margin adjustments -->
			<blockquote class="font-playfair font-semibold italic text-xl md:text-1xl text-turkish mx-auto max-w-2xl md:w-1/2 text-right md:text-right md:mt-20 md:mr-2">
			"Når <br> klassisk <br> møder <br> moderne, <br> opstår <br> noget <br> helt <br> nyt."<br>
			</blockquote>
		
			<!-- SOPHIE image to the right with zoom animation -->
			<Image 
			src={sophietypeface} 
			class="w-[200px] h-[200px] object-contain animate__animated animate__zoomIn animate-pulse md:w-[300px] md:h-[200px]" 
			alt="typeface" 
			/>
		</div>
	</section>

	<section id="examples" class="bg-gradient-to-b from-kingblue to-pastelblue text-white md:pt-20 text-center md:pb-20">
		<h1 class="font-playfair font-bold text-white text-4xl md:text-5xl drop-shadow-lg">
		  ANVENDELSESMULIGHEDER
		</h1>
	  
		<div class="flex flex-col items-center gap-6 mt-6 mx-auto max-w-3xl px-4 md:pl-8 md:pr-72">
		  <h3 class="font-playfair text-lg md:text-xl text-left md:my-16">
			<span class="font-bold">SOPHIE</span> er designet til at fange opmærksomhed og løfte ethvert design. Med sine markante linjer og unikke mønster skaber den en smuk kontrast, der fungerer både i klassiske og moderne designs.
		  </h3>
		</div>
	  
		<!-- Visual Examples Section -->
		<div class="flex flex-wrap justify-center gap-8 mt-10 px-4">
			<div class="max-w-sm space-y-4 md:space-y-6">
				<!-- <p class="font-playfair font-bold text-white text-lg md:text-xl md:mt-5">PLAKATER</p> -->
				
				<!-- Billede 1 -->
				<Image 
				  src={poster} 
				  class="w-[250px] h-[250px] object-contain md:w-[800px] md:h-[530px]" 
				  alt="typeface" 
				/>
				
				<!-- Billede 2 -->
				<Image 
				  src={musikfestival} 
				  class="w-[250px] h-[250px] object-contain md:w-[800px] md:h-[500px]" 
				  alt="typeface" 
				/>
				
				<!-- Billede 3 -->
				<Image 
				  src={motivation} 
				  class="w-[250px] h-[250px] object-containx md:w-[800px] md:h-[530px]" 
				  alt="typeface" 
				/>
			  </div>			  
	  
		  <div class="max-w-sm">
			<!-- <p class="font-playfair font-bold text-white text-lg md:mt-5">WEBDESIGN</p> -->
			<Image src={event} class="w-[200px] h-[250px] object-contain staggered-image md:w-[300px] md:h-[350px]" alt="typeface" />
			<Image src={invite} class="w-[200px] h-[250px] object-contain staggered-image md:w-[300px] md:h-[300px]" alt="typeface" />
			<Image src={artshop} class="w-[200px] h-[250px] object-contain staggered-image md:w-[300px] md:h-[350px]" alt="typeface" />
			<Image src={cv} class="w-[200px] h-[200px] object-contain staggered-image md:w-[300px] md:h-[300px]" alt="typeface" />
			<Image src={beauty} class="w-[200px] h-[250px] object-contain staggered-image md:w-[300px] md:h-[350px]" alt="typeface" />
		  </div>
		</div>
	  </section> 
	  
	  <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.x.x/dist/alpine.min.js" defer></script>
	  <script type="module">
		import { animate, inView as motionInView } from 'https://cdn.jsdelivr.net/npm/@motionone/dom@1.0.0-beta.10/dist/motion-one.min.js';
	  
		document.addEventListener('DOMContentLoaded', function() {
  const images = document.querySelectorAll('.staggered-image');

		const observer = new IntersectionObserver((entries, observer) => {
			entries.forEach(entry => {
			if (entry.isIntersecting) {
				// Tilføj animate klassen, når billedet er synligt
				entry.target.classList.add('animate');
				// Stop med at observere dette billede
				observer.unobserve(entry.target);
			}
			});
		}, { threshold: 0.5 }); // Observerer, når 50% af billedet er synligt

		// Start observering af billederne
		images.forEach(image => {
			observer.observe(image);
		});
		});

	  </script>
	  
